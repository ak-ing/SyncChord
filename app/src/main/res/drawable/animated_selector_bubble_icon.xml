<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/selected"
        android:drawable="@drawable/ic_bubble_p"
        android:state_selected="true" />
    <item
        android:id="@+id/normal"
        android:drawable="@drawable/ic_bubble"
        android:state_selected="false" />

    <transition
        android:drawable="@drawable/anim_vector_bubble_n2p"
        android:fromId="@id/normal"
        android:toId="@id/selected" />

    <transition
        android:drawable="@drawable/anim_vector_bubble_p2n"
        android:fromId="@id/selected"
        android:toId="@id/normal" />
</animated-selector>
